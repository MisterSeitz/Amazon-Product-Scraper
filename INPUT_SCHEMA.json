{
  "schemaVersion": 1,
  "title": "Amazon Product Scraper Input",
  "type": "object",
  "properties": {
    "search": {
      "title": "Search Query",
      "type": "string",
      "description": "The keyword or product name to search for on Amazon.",
      "editor": "textfield"
    },
    "maxItems": {
      "title": "Maximum Items",
      "type": "integer",
      "description": "The maximum number of products to scrape.",
      "default": 50,
      "editor": "number"
    },
    "mode": {
      "title": "Scraper Mode",
      "type": "string",
      "description": "Choose how the scraper runs.",
      "enum": [
        "search",
        "asin",
        "url"
      ],
      "enumTitles": [
        "Search by keyword",
        "Scrape by ASIN list",
        "Scrape by product URLs"
      ],
      "editor": "select"
    },
    "asins": {
      "title": "ASINs",
      "type": "array",
      "description": "List of ASINs to scrape if using 'asin' mode.",
      "items": {
        "type": "string",
        "enum": []
      },
      "editor": "select"
    },
    "urls": {
      "title": "Product URLs",
      "type": "array",
      "description": "List of Amazon product URLs to scrape if using 'url' mode.",
      "items": {
        "type": "string",
        "format": "uri",
        "enum": []
      },
      "editor": "select"
    }
  },
  "required": ["mode"]
}

{
  "schemaVersion": 1,
  "title": "Input schema for Amazon Product Scraper",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "title": "Scraper Mode",
      "enum": [
        {
          "const": "search",
          "title": "Search for products",
          "description": "Find products by keyword search and scrape their basic details"
        },
        {
          "const": "product_urls",
          "title": "Scrape product URLs",
          "description": "Scrape full details from specific product pages you provide"
        }
      ],
      "default": "search"
    },
    "marketplace": {
      "type": "string",
      "title": "Amazon Marketplace",
      "enum": [
        { "const": "com", "title": "Amazon.com (US)", "description": "United States" },
        { "const": "co.uk", "title": "Amazon.co.uk (UK)", "description": "United Kingdom" },
        { "const": "de", "title": "Amazon.de (Germany)", "description": "Germany" },
        { "const": "ca", "title": "Amazon.ca (Canada)", "description": "Canada" },
        { "const": "com.au", "title": "Amazon.com.au (Australia)", "description": "Australia" },
        { "const": "co.za", "title": "Amazon.co.za (South Africa)", "description": "South Africa" },
        { "const": "in", "title": "Amazon.in (India)", "description": "India" }
      ],
      "default": "com"
    },
    "keywords": {
      "type": "array",
      "title": "Search Keywords",
      "items": { "type": "string" }
    },
    "productUrls": {
      "type": "array",
      "title": "Product URLs",
      "items": { "type": "string" }
    },
    "maxPagesPerKeyword": {
      "type": "integer",
      "title": "Max Pages per Keyword",
      "minimum": 1,
      "maximum": 20,
      "default": 1
    },
    "concurrency": {
      "type": "integer",
      "title": "Concurrent Pages",
      "minimum": 1,
      "maximum": 30,
      "default": 5
    },
    "runName": {
      "type": "string",
      "title": "Run Name",
      "default": "amazon-scrape"
    }
  },
  "required": ["mode"]
}
